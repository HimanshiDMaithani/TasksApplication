@page
@model TaskManagementSystem.Pages.TasksModel
@{
    ViewData["Title"] = "Application";
}

<h1>Application</h1>

<form id="taskForm">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" maxlength="100" required />

    <label for="priority">Priority:</label>
    <input type="number" id="priority" name="priority" min="0" required />

    <label for="status">Status:</label>
    <select id="status" name="status" required>
        <option value="NotStarted">Not Started</option>
        <option value="InProgress">In Progress</option>
        <option value="Completed">Completed</option>
    </select>

    <button type="submit">Add/Update Task</button>
</form>

<table id="taskTable" border="1">
    <thead>
        <tr>
            <th>Name</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    const apiUrl = '/api/Task';

    function fetchTasks() {
        $.get(apiUrl, function (data) {
            const tbody = $('#taskTable tbody');
            tbody.empty();

            data.forEach(task => {
                tbody.append(`
                    <tr data-id="${task.id}">
                        <td>${task.name}</td>
                        <td>${task.priority}</td>
                        <td>${task.status}</td>
                        <td>
                            <button onclick="editTask('${task.id}')">Edit</button>
                            <button onclick="deleteTask('${task.id}')">Delete</button>
                        </td>
                    </tr>
                `);
            });
        });
    }

    function editTask(id) {
        $.get(`${apiUrl}/${id}`, function (task) {
            $('#name').val(task.name);
            $('#priority').val(task.priority);
            $('#status').val(task.status);
            $('#taskForm').data('taskId', task.id);
        });
    }

    function deleteTask(id) {
        $.ajax({
            url: `${apiUrl}/${id}`,
            type: 'DELETE',
            success: fetchTasks,
            error: (xhr) => alert(xhr.responseText)
        });
    }

    $('#taskForm').on('submit', function (event) {
        event.preventDefault();

        const task = {
            name: $('#name').val(),
            priority: parseInt($('#priority').val()),
            status: $('#status').val(),
        };

        const id = $('#taskForm').data('taskId');
        if (id) {
            task.id = id;
            $.ajax({
                url: `${apiUrl}/${id}`,
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify(task),
                success: () => {
                    fetchTasks();
                    resetForm();
                },
                error: (xhr) => alert(xhr.responseText)
            });
        } else {
            $.post({
                url: apiUrl,
                contentType: 'application/json',
                data: JSON.stringify(task),
                success: () => {
                    fetchTasks();
                    resetForm();
                },
                error: (xhr) => alert(xhr.responseText)
            });
        }
    });

    function resetForm() {
        $('#name').val('');
        $('#priority').val('');
        $('#status').val('Not Started');
        $('#taskForm').removeData('taskId');
    }

    $(document).ready(fetchTasks);
</script>
